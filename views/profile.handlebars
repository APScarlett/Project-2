<div class="row">
  <div class="col-auto">
    <h2 style="font-size: 28px;">Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 style="font-size: 24px;">Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title" style="font-size: 19px;">Post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" style="font-size: 15px; width: 150px; height: 25px;" />
      </div>
      
      <div class="form-group">
        <label for="post-contents" style="font-size: 19px;">Comment:</label>
        <textarea class="form-input" id="post-contents" name="post-contents" style="font-size: 15px; width: 150px; height: 25px;"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" style="font-size: 15px; width: 80px; height: 25px;">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3 style="font-size: 24px;">Current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}" style="font-size: 15px; width: 80px; height: 25px;">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/assets/js/profile.js"></script>
