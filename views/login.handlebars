<div class="row">
  <div class="col-md-6">
    <h2 class="big-text" style="font-size: 28px;">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Username:</label>
        <input class="form-input" type="text" id="username-login" style="font-size: 15px; width: 150px; height: 26px;" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" style="font-size: 15px; width: 150px; height: 26px;" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="font-size: 15px; width: 60px; height: 28px;">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 style="font-size: 28px;">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" style="font-size: 15px; width: 150px; height: 26px;" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" style="font-size: 15px; width: 150px; height: 26px;" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="font-size: 15px; width: 60px; height: 28px;">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/assets/js/login.js"></script>
